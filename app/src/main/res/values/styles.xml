<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Effects_Constraint_Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">95sp</item>
    </style>
    
    <style name="SeekBarColor" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumbTint">@color/white</item>
        <item name="android:progressTint">@color/white</item>
    </style>

</resources>
